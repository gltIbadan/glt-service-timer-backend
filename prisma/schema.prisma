/// =============
//  Temporary Schedule Model
/// ==============

model TempSchedule {
  id          Int           @id        @default(autoincrement())
  title       String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  userId      String
  programs    TempProgram[]

  @@index([id, title])
}



/// ==============
//  Temporary Program
/// ==============

model TempProgram {
  id          Int          @id        @default(autoincrement())
  title       String?
  duration    Int
  startTime   DateTime
  lead        String?
  type        ProgramType
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  userId      String
  schedule    TempSchedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  scheduleId  Int

  @@index([id, title])
}